{% for object in admin.datagrid.results %}
    <tr
            class="
               {% if object.status == constant('App\\Entity\\Order::STATUS_DRAFT') %}ordered{% endif %}
               {% if object.status == constant('App\\Entity\\Order::STATUS_ORDERED') %}ordered{% endif %}
               {% if object.status == constant('App\\Entity\\Order::STATUS_SENT') %}ordered{% endif %}
               {% if object.status == constant('App\\Entity\\Order::STATUS_DONE') %}ordered{% endif %}
           "
    >
        {% include get_admin_template('inner_list_row', admin.code) %}
    </tr>
{% endfor %}
