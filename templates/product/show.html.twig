{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ product.title }}</h1>
    <p>Price: {{ product.price }}</p>
    <hr>
    <p>{{ product.description }}</p>
    <p>
        <img class="card-img-top col-6"
             src="{%- if product.imageName -%}
                                   {{ vich_uploader_asset(product, 'imageFile') | imagine_filter('squared_product_thumbnail')}}
                               {%- else -%}
                                   //placehold.it/300x200
                               {%- endif -%}"
             alt="{{ product.title }}">
    </p>
{% endblock %}

{% block title %}
    {{ product.title }}
{% endblock %}