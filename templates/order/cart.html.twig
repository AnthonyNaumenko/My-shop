{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <h1>Корзина</h1>
<table class="table">

    <tr>
        <th>Товар</th>
        <th>Цена</th>
        <th>Количество</th>
        <th>Стоимость</th>

    </tr>
    {#@var item \App\Entity\OrderItem #}
{% for item in cart.items %}
    <tr>
        <td>{{ item.product.title }}</td>
        <td>{{ item.price }}</td>
        <td>{{ item.quantity }}</td>
        <td>{{ item.amount }}</td>
        <td><a href="{{ path('order_delete_item', {id: item.id}) }}" class="btn btn-danger">Delete</a> </td>

    </tr>
{% endfor %}
    <tr>
        <th colspan="3">Всего</th>
        <th>{{ cart.amount }}</th>
    </tr>


    </table>

{% endblock %}